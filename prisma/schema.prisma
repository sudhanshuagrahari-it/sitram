// Prisma schema for selfie contest submissions
// Run `npx prisma migrate dev` after editing this file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SelfieSubmission {
  id        String   @id @default(uuid())
  instagram String
  createdAt DateTime @default(now())
}

model QuizAttempt {
  id        String   @id @default(uuid())
  name      String?
  mobile    String?
  answers   Json
  score     Int
  createdAt DateTime @default(now())
}
